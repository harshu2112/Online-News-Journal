
  <%- include("partials/header") -%>

<div class="container">
  <h1>Compose</h1>

    <form action="/compose" method="post">
        <div class="form-group">
          <label for="composetitle">Title</label>
          <input type="text" class="form-control" name="title" id="composetitle"  placeholder="Enter Title">
        </div>
        <div class="form-group">
          <label for="composepost">Post</label>
          <textarea  type="text" rows = "5" cols = "60" wrap="hard" class="form-control" name="content" id="composepost" placeholder="Enter Post"></textarea>
        </div>
    
        <button type="submit" class="btn btn-primary">Publish</button>
      </form>
</div>

  
  <%- include("partials/footer") -%>